{
  "$id": "./modules.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Modules",
  "description": "IaC module definition list",
  "type": "object",
  "properties": {
    "modules": {
      "description": "Module definitions",
      "type": "array",
      "items": {
        "$ref": "./module.schema.json"
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "required": [
    "modules"
  ]
}